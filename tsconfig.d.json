{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "packages/ui/lib",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "downlevelIteration": true,
    "allowJs": false,
    "strict": false,
    "esModuleInterop": false,
    "removeComments": true,
    "declaration": true,
    "declarationMap": false,
    "rootDir": "./packages/ui/src",
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules/*",
    "packages/ui/src/**/demo/*"
  ],
  "include": [
    "packages/ui/src/**/*"
  ]
}
