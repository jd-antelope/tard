{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ESNext",
    "types": [
      "vite/client"
    ],
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules/*",
    "packages/vite/*",
    "packages/demo/*"
  ],
}
